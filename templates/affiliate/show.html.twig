{% extends 'base.html.twig' %}

{% block title %}Affiliate{% endblock %}

{% block body %}
    <h1>Affiliate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ affiliate.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ affiliate.url }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ affiliate.email }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ affiliate.token }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ affiliate.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ affiliate.createdAt ? affiliate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('affiliate_index') }}">back to list</a>

    <a href="{{ path('affiliate_edit', {'id': affiliate.id}) }}">edit</a>

    {{ include('affiliate/_delete_form.html.twig') }}
{% endblock %}
